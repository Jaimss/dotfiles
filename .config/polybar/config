[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
; Only show workspaces on the same output as the bar
pin-workspaces = true
; labels
;label-mode-padding = 2
;label-mode-foreground = #000
;label-mode-background = ${colors.blue}
; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-underline = ${colors.blue}
label-focused-padding = 2
; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
;label-unfocused-background = ${self.label-focused-background} 
label-unfocused-padding = 2
; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}
; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-underline = ${colors.alert}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format-foreground = ${colors.blue}
format-background = ${colors.bg-darker}
label = " %percentage:2%% "

[module/memory]
type = internal/memory
interval = 2
format-foreground = ${colors.blue}
format-background = ${colors.bg-darker}
label = "  %percentage_used%% "

[module/date]
type = internal/date
interval = 1

date = " %a %d %b"
date-alt = " %a %d %b"

time = "%l:%M%P"
time-alt = "%l:%M:%S%P"

format-prefix = 
format-foreground = ${colors.blue}
format-background = ${colors.bg-darker}
format-padding = 2

label = %date% %time%

[module/battery]
type = internal/battery

full-at = 99
low-at = 20

battery = BAT0
adapter = AC

poll-interval = 5

format-charging-foreground = ${colors.blue}
format-charging-background = ${colors.bg-darker}
format-discharging-foreground = ${colors.blue}
format-discharging-background = ${colors.bg-darker}
format-low-foreground = ${colors.blue}
format-low-background = ${colors.bg-darker}
format-full-foreground = ${colors.blue}
format-full-background = ${colors.bg-darker}

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
format-low = <label-low> <animation-low>

label-charging = %percentage%%
label-discharging = %percentage%%
label-full =  %percentage%%
label-low = %percentage%%

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

; Only applies if <animation-discharging> is used
